<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ItTechGenie</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-2270827713894017"
            crossorigin="anonymous"></script>
</head>
<body>
    <header class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/">ItTechGenie</a>
    </header>
    <div class="container-fluid">
        <div class="row">
            <!-- Left Menu -->
            <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky pt-3">
                    <h4>MCQ with Answer</h4>
                    <ul class="nav flex-column">
                        <!-- Azure DevOps -->
                        <li class="nav-item">
                            <!-- First link to navigate to the AzureDevOps action -->
                            <a class="nav-link" href="@Url.Action("AzureDevOps", "Home")">
                                Azure DevOps
                            </a>

                            <!-- Corrected the toggle link and used "#" instead of action for collapsing sub-items -->
                            <a class="nav-link" data-bs-toggle="collapse" href="#azureDevOpsMenu" role="button" aria-expanded="false" aria-controls="azureDevOpsMenu">
                                <i class="bi bi-chevron-down"></i> Expand
                            </a>

                            <!-- Collapsible content for sub-items -->
                            <ul class="collapse" id="azureDevOpsMenu">
                                <li><a class="nav-link" href="@Url.Action("CloudCompute", "Home")">Introduction to Azure DevOps</a></li>
                                <li><a class="nav-link" href="@Url.Action("CloudCompute", "Home")">Why Azure DevOps?</a></li>
                                <li><a class="nav-link" href="@Url.Action("CloudCompute", "Home")">Components of Azure DevOps</a></li>
                                <li><a class="nav-link" href="@Url.Action("CloudCompute", "Home")">Pipelines</a></li>
                                <li><a class="nav-link" href="@Url.Action("CloudCompute", "Home")">Boards</a></li>
                                <li><a class="nav-link" href="@Url.Action("CloudCompute", "Home")">Artifacts</a></li>
                                <li><a class="nav-link" href="@Url.Action("CloudCompute", "Home")">Repos</a></li>
                                <li><a class="nav-link" href="@Url.Action("CloudCompute", "Home")">Test Plans</a></li>
                            </ul>
                        </li>

                        <!-- Cloud Computing & Azure Fundamentals -->
                        <li class="nav-item">
                            <!-- Use # for collapsing and expanding sub-menu -->
                            <a class="nav-link" data-bs-toggle="collapse" href="#cloudComputingMenu" role="button" aria-expanded="false" aria-controls="cloudComputingMenu">
                                Cloud Computing & Azure Fundamentals
                            </a>
                            <ul class="collapse" id="cloudComputingMenu">
                                <li><a class="nav-link" href="@Url.Action("CloudCompute", "Home")">Cloud Computing & Microsoft Azure Fundamentals</a></li>
                                <li><a class="nav-link" href="@Url.Action("CloudCompute", "Home")">Microsoft Azure Portal Overview</a></li>
                                <li><a class="nav-link" href="@Url.Action("CloudCompute", "Home")">Overview of Cloud Computing</a></li>
                                <li><a class="nav-link" href="@Url.Action("CloudCompute", "Home")">Overview of Public, Private & Hybrid Cloud</a></li>
                                <li><a class="nav-link" href="@Url.Action("CloudCompute", "Home")">Core Azure Services</a></li>
                                <li><a class="nav-link" href="@Url.Action("CloudCompute", "Home")">Availability Zones</a></li>
                                <li><a class="nav-link" href="@Url.Action("CloudCompute", "Home")">Identity, Azure Active Directory</a></li>
                            </ul>
                        </li>

                        <!-- Azure PaaS Services -->
                        <li class="nav-item">
                            <!-- Use # for collapsing and expanding sub-menu -->
                            <a class="nav-link" data-bs-toggle="collapse" href="#azurePaasMenu" role="button" aria-expanded="false" aria-controls="azurePaasMenu">
                                Azure PaaS Services
                            </a>
                            <ul class="collapse" id="azurePaasMenu">
                                <li><a class="nav-link" href="@Url.Action("AzurePaas", "Home")">Azure Web App</a></li>
                                <li><a class="nav-link" href="@Url.Action("AzurePaas", "Home")">App Service Plan</a></li>
                                <li><a class="nav-link" href="@Url.Action("AzurePaas", "Home")">Azure Function App</a></li>
                                <li><a class="nav-link" href="@Url.Action("AzurePaas", "Home")">Service Bus Messaging</a></li>
                                <li><a class="nav-link" href="@Url.Action("AzurePaas", "Home")">Azure Logic App</a></li>
                                <li><a class="nav-link" href="@Url.Action("AzurePaas", "Home")">Azure Database Services</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">@ViewData["Title"]</h1>
                </div>
                <div>
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- google adsense-->
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-2270827713894017"
            crossorigin="anonymous"></script>
    <ins class="adsbygoogle"
         style="display:block"
         data-ad-client="ca-pub-2270827713894017"
         data-ad-slot="3993585551"
         data-ad-format="auto"
         data-full-width-responsive="true"></ins>
    <script>
        (adsbygoogle = window.adsbygoogle || []).push({});
    </script>
    <!-- google adsense-->
</body>
</html>
